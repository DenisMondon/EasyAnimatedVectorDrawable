<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blunderer.easyanimatedvectordrawabledemo.MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_main_left_arrow_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_left_arrow"
        app:layout_constraintEnd_toStartOf="@+id/activity_main_up_arrow_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_main_up_arrow_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_up_arrow"
        app:layout_constraintEnd_toStartOf="@+id/activity_main_right_arrow_button"
        app:layout_constraintStart_toEndOf="@id/activity_main_left_arrow_button"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_main_right_arrow_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_right_arrow"
        app:layout_constraintEnd_toStartOf="@+id/activity_main_down_arrow_button"
        app:layout_constraintStart_toEndOf="@id/activity_main_up_arrow_button"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_main_down_arrow_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_down_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_main_right_arrow_button"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_main_imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_play_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/eavd_vd_play"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_main_play_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_main_pause_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_main_pause_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_main_stop_button"
        app:layout_constraintStart_toEndOf="@id/activity_main_play_button"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_main_stop_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_main_pause_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>
